@model DreamHomeWeb.Models.DomainModel
@{
    ViewData["Title"] = "Staff";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].SupervisorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff[0].BranchId)
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model.Staff)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupervisorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>